{% include 'partials/_navbar.html.twig' %}

{% block body %}
<form method="post" class="login-form">
    {% if error %}
        <div class="login-error alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <h1 class="login-title h3 mb-3 font-weight-normal">Connectez vous !</h1>
    <label for="inputEmail" class="login-label">Email :</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="login-input form-control" autocomplete="email" required autofocus>
    <label for="inputPassword" class="login-label">Mot de passe :</label>
    <input type="password" name="password" id="inputPassword" class="login-input form-control" autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    <div class="login-checkbox checkbox mb-3">
        <label>
            <input type="checkbox" name="_remember_me"> Se souvenir de moi
        </label>
    </div>

    <button class="login-button btn btn-lg btn-primary" type="submit">
        Connexion
    </button>
</form>
{% endblock %}
