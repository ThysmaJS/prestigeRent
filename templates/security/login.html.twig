{% include 'partials/_navbar.html.twig' %}

{% block body %}
<form method="post" class="login-form max-w-sm mx-auto bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
    {% if error %}
        <div class="login-error bg-red-100 border border-red-400 text-red-700 px-4 py-3 mb-4 rounded relative" role="alert">
            <span class="block sm:inline">{{ error.messageKey|trans(error.messageData, 'security') }}</span>
            <span class="absolute top-0 bottom-0 right-0 px-4 py-3">
                <svg class="fill-current h-6 w-6 text-red-500" role="button" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20">
                    <title>Close</title>
                    <path d="M6.293 6.293a1 1 0 011.414 0L10 8.586l2.293-2.293a1 1 0 111.414 1.414L11.414 10l2.293 2.293a1 1 0 11-1.414 1.414L10 11.414l-2.293 2.293a1 1 0 01-1.414-1.414L8.586 10 6.293 7.707a1 1 0 010-1.414z" clip-rule="evenodd" fill-rule="evenodd"/>
                </svg>
            </span>
        </div>
    {% endif %}

    <h1 class="login-title text-center text-xl font-semibold mb-4">Connectez-vous !</h1>
    <label for="inputEmail" class="login-label">Email :</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="login-input form-input w-full py-2 px-3 mb-4 leading-tight focus:outline-none focus:shadow-outline" autocomplete="email" required autofocus>
    <label for="inputPassword" class="login-label">Mot de passe :</label>
    <input type="password" name="password" id="inputPassword" class="login-input form-input w-full py-2 px-3 mb-4 leading-tight focus:outline-none focus:shadow-outline" autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

    <div class="login-checkbox flex items-center mb-4">
        <input type="checkbox" name="_remember_me" id="rememberMe" class="form-checkbox h-5 w-5 text-blue-600"><label for="rememberMe" class="ml-2">Se souvenir de moi</label>
    </div>

    <button class="login-button bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline w-full" type="submit">
        Connexion
    </button>
</form>
{% endblock %}
