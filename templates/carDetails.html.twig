{% block content %}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="styles.css">

    <style>
        /* Styles for carousel */
        .carousel-item img {
            width: 400px;
            height: 400px;
			object-fit: contain;
        }

        .carousel-control-prev,
        .carousel-control-next {
            width: 5%;
            color: red;
        }

        .carousel-control-prev-icon,
        .carousel-control-next-icon {
            background-color: blue;
        }

        .carousel-control-prev-icon:before,
        .carousel-control-next-icon:before {
            color: red;
        }

        .carousel-control-prev {
            left: 15%;
        }

        .carousel-control-next {
            right: 15%;
        }

        /* Grid layout */
        .product-container {
            margin: 0 auto;
            padding: 20px;
            display: grid;
            gap: 20px;
            grid-template-columns: 1fr 1fr; /* Two equal columns */
        }

        .product-details {
            display: grid;
            gap: 20px;
            grid-template-columns: 1fr; /* Single column */
        }

        .product-image img {
            width: 500px;
            height: 400px;
            border-radius: 8px;
            margin-bottom: 20px;
            cursor: pointer;
        }

        .product-image img:hover {
            opacity: 0.8;
        }

        .product-image-thumbnail {
            width: 300px;
            height: 150px;
            border-radius: 8px;
            margin-bottom: 10px;
            cursor: pointer;
			object-fit: cover;
        }

        .product-image-thumbnail:hover {
            opacity: 0.8;
        }

        .product-detail-container {
            background-color: #ffffff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
        }

        .product-detail-title {
            font-size: 24px;
            font-weight: bold;
            color: #333;
            margin-bottom: 10px;
        }

        .product-detail-description {
            font-size: 16px;
            color: #484848;
            margin-bottom: 10px;
        }

        .product-detail-price {
            font-size: 18px;
            font-weight: bold;
            color: #008489;
            margin-bottom: 10px;
        }

        .product-detail-availability {
            font-size: 16px;
            color: #484848;
            margin-bottom: 10px;
        }

        .product-detail-button {
            background-color: #008489;
            color: #fff;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            font-size: 16px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .product-detail-button:hover {
            background-color: #00575e;
        }

        .car-characteristics,
        .profile-section {
            background-color: #f9f9f9;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        /* Media queries for responsiveness */
        @media only screen and (max-width: 767px) {
            .product-details {
                display: none;
            }
        }

        @media only screen and (min-width: 768px) {
            .product-container {
                grid-template-columns: 1fr 1fr; /* Two columns for larger screens */
            }

            .product-image {
                grid-row: span 2; /* Image spans two rows */
            }

            .product-details {
                grid-template-columns: 1fr; /* Single column for details */
            }
        }
    </style>
</head>
<body>
<header>
    <h1 class="product-title">{{ car.title }}</h1>
</header>
<div class="product-container">
    <main>
        <div class="product-details">
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    {% for image in car.getImages() %}
                        <div class="carousel-item {% if loop.first %}active{% endif %}">
                            <img class="d-block w-100" src="{{ asset('images/' ~ image.getImagePath()) }}" alt="Slide {{ loop.index }}">
                        </div>
                    {% endfor %}
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>

            <div class="row">
                {% for image in car.getImages() %}
                    <div class="col-md-4">
                        <img src="{{ asset('images/' ~ image.getImagePath()) }}" class="img-thumbnail product-image-thumbnail" data-target="#carouselExampleIndicators" data-slide-to="{{ loop.index0 }}">
                    </div>
                {% endfor %}
            </div>
        </div>
        <div class="car-characteristics">
            <h2 class="product-detail-title">Caractéristiques</h2>
            <ul>
                <li>Marque: Toyota</li>
                <li>Modèle: Camry</li>
                <li>Année: 2022</li>
                <li>Couleur: Gris</li>
                <li>Carburant: Diesel</li>
                <li>places: 5</li>
                <li>Options: Climatisation</li>
                <!-- Add more characteristics if needed -->
            </ul>
        </div>
    </main>
    <aside>
        <div class="product-detail-container">
            <h2 class="product-detail-title">Description</h2>
            <p class="product-detail-description">{{ car.description }}</p>
            <h2 class="product-detail-title">Prix</h2>
            <p class="product-detail-price">{{ car.price }}</p>
            <h2 class="product-detail-title">Disponibilité</h2>
            <p class="product-detail-availability">Disponible</p>
            <button class="product-detail-button">Contacter</button>
        </div>
        <div class="profile-section">
            <h2>Profil</h2>
            <div class="profile-details">
                <img src="path_to_profile_picture.jpg" alt="Profile Picture">
                <div>
                    <p>Nom: John Doe</p>
                    <p>Prénom: Jane</p>
                    <p>Numéro de téléphone: +123456789</p>
                    <p>E-mail: example@example.com</p>
                </div>
            </div>
        </div>
    </aside>
</div>
</body>
</html>
{% endblock %}

