{% include 'partials/_navbar.html.twig' %}

{% block content %}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ car.title }} - Location de Voiture</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/slick-carousel/slick/slick.css"/>
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/slick-carousel/slick/slick-theme.css"/>
    <style>
        /* Ajoutez des styles spécifiques si nécessaire */
    </style>
</head>
<body>

<header class="bg-gray-800 text-white py-4">
    <div class="container mx-auto">
        <h1 class="text-3xl font-bold">{{ car.title }}</h1>
    </div>
</header>

<div class="container mx-auto py-8">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <div>
            <div class="slick-carousel slider-for slider-nav">
                {% for image in car.getImages() %}
                <div>
                    <img src="{{ asset('images/' ~ image.getImagePath()) }}" alt="{{ car.title }}">
                </div>
                {% endfor %}
            </div>
        </div>
        <div>
            <div class="bg-white shadow-md rounded-md p-6">
                <h2 class="text-2xl font-bold mb-4">Caractéristiques</h2>
                <ul>
                    <li>Marque: Toyota</li>
                    <li>Modèle: Camry</li>
                    <li>Année: 2022</li>
                    <li>Couleur: Gris</li>
                    <li>Carburant: Diesel</li>
                    <li>places: 5</li>
                    <li>Options: Climatisation</li>
                    <!-- Add more characteristics if needed -->
                </ul>
            </div>
            <div class="bg-white shadow-md rounded-md p-6 mt-4">
                <h2 class="text-2xl font-bold mb-4">Description</h2>
                <p class="text-gray-700">{{ car.description }}</p>
                <h2 class="text-2xl font-bold mb-4 mt-4">Prix</h2>
                <p class="text-green-600 font-semibold">{{ car.price }}</p>
                <h2 class="text-2xl font-bold mb-4 mt-4">Disponibilité</h2>
                <p class="text-gray-700">Disponible</p>
                <button class="bg-blue-500 text-white px-4 py-2 rounded-md mt-4 hover:bg-blue-600 transition duration-300">Contacter</button>
            </div>
        </div>
    </div>
    <div class="bg-gray-100 shadow-md rounded-md p-6 mt-8">
        <h2 class="text-2xl font-bold mb-4">Profil</h2>
        <div class="flex items-center space-x-4">
            <img src="path_to_profile_picture.jpg" alt="Profile Picture" class="w-20 h-20 rounded-full">
            <div>
                <p class="text-lg font-semibold">Nom: John Doe</p>
                <p class="text-lg font-semibold">Prénom: Jane</p>
                <p class="text-lg font-semibold">Numéro de téléphone: +123456789</p>
                <p class="text-lg font-semibold">E-mail: example@example.com</p>
            </div>
        </div>
    </div>
</div>

{% include 'partials/_footer.html.twig' %}

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/slick-carousel/slick/slick.min.js"></script>
<script>
    $(document).ready(function(){
        $('.slick-carousel').slick({
            slidesToShow: 1,
            slidesToScroll: 1,
            autoplay: false,
            dots: true,
            arrows: true,
            responsive: [
                {
                    breakpoint: 768,
                    settings: {
                        slidesToShow: 1
                    }
                },
                {
                    breakpoint: 520,
                    settings: {
                        slidesToShow: 1
                    }
                }
            ]
        });

        $('.slider-for').slick({
            slidesToShow: 1,
            slidesToScroll: 1,
            arrows: false,
            fade: true,
            asNavFor: '.slider-nav'
        });

        $('.slider-nav').slick({
            slidesToShow: 3,
            slidesToScroll: 1,
            asNavFor: '.slider-for',
            dots: true,
            centerMode: true,
            focusOnSelect: true
        });
    });
</script>
</body>
</html>

{% endblock %}

{% include 'partials/_footer.html.twig' %}
