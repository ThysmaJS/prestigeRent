{% include 'partials/_navbar.html.twig' %}

<body class="bg-gray-200">
    <div class="container mx-auto py-8">
        <h1 class="text-3xl font-semibold mb-8">Gestion de Profil</h1>
        
        <div class="flex items-center mb-8">
            <div class="w-20 h-20 bg-gray-300 rounded-full mr-4"></div>
            <div class="details">
                <h2 class="text-xl font-semibold">{{ user.username }}</h2>
                <p class="text-gray-600">Email: {{ user.email }}</p>
            </div>
        </div>
        
        <div class="bg-white p-6 rounded-lg shadow-md mb-8">
            <h2 class="text-xl font-semibold mb-4">Modifier le profil</h2>
            <form action="/update_profile" method="POST">
                <div class="mb-4">
                    <label for="name" class="block text-gray-700 font-semibold mb-2">Pseudo:</label>
                    <input type="text" id="name" name="name" value="{{ user.username }}" required class="form-input w-full py-2 px-3 mb-3 leading-tight focus:outline-none focus:shadow-outline" autocomplete="off">
                </div>
                <div class="mb-4">
                    <label for="email" class="block text-gray-700 font-semibold mb-2">Email:</label>
                    <input type="email" id="email" name="email" value="{{ user.email }}" required class="form-input w-full py-2 px-3 mb-3 leading-tight focus:outline-none focus:shadow-outline" autocomplete="off">
                </div>
                <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
                    Enregistrer
                </button>
            </form>
        </div>

        <div class="flex justify-between">
            <a href="#" class="bg-gray-500 hover:bg-gray-600 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
                Mes favoris
            </a>
            <a href="#" class="bg-gray-500 hover:bg-gray-600 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
                Mes annonces
            </a>
        </div>
    </div>
</body>
</html>
